<table id="movies">
  <thead>
    <tr>
      <th class="<%= ('hilite' if @hilite == 'title') %>">
        <%= link_to "Movie Title", movies_path(:sort => 'title'), id: "title_header" %>
      </th>
      <th>Rating</th>
      <th class="<%= ('hilite' if @hilite == 'release_date') %>">
        <%= link_to "Release Date", movies_path(:sort => 'release_date'), id: "release_date_header" %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
</table>